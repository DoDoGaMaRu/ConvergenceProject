<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.OptionMapper">
    <resultMap id="result" type="OptionDTO">
        <result property="id" column="id"/>
        <result property="num" column="num"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="store_id" column="store_id"/>
    </resultMap>

    <insert id="insertOption">
        INSERT INTO option (num, name, price, store_id)
        VALUES (#{num}, #{name}, #{price}, #{store_id}))
    </insert>

    <select id="selectAllWithStore_id">
        SELECT *
        FROM option
        WHERE store_id=#{store_id}
    </select>

    <resultMap id="result" type="Map">
        <result property="menu_id" column="menu_id"/>
        <result property="option_id" column="option_id"/>
    </resultMap>

    <insert id="insertMenuOption">
        INSERT INTO menu_option_map (menu_id, option_id)
        VALUES (#{menu_id}, #{option_id})
    </insert>

    <select id="selectAllWithMenu_id">
        SELECT *
        FROM menu_option_map
        WHERE menu_id=#{menu_id}
    </select>
</mapper>