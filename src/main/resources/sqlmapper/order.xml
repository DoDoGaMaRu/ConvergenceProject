<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.OrderMapper">
    <resultMap id="result" type="OrderDTO">
        <result property="id" column="id"/>
        <result property="regdate" column="regdate"/>
        <result property="option" column="option"/>
        <result property="price" column="price"/>
        <result property="status" column="status"/>
        <result property="comment" column="comment"/>
        <result property="total_order_id" column="total_order_id"/>
        <result property="store_id" column="store_id"/>
    </resultMap>

    <insert id="insert">
        insert into order (id, regdate, option, price, status, comment, total_order_id, store_id)
        values (#{id}, #{regdate}, #{option}, #{price}), #{status}, #{comment}), #{total_order_id}, #{store_id})
    </insert>

    <select id="selectAllForStore">
        select * from order where store_id = #{store_id}
    </select>

    <select id="selectAllForReview">
        select * from order where total_order_id = #{total_order_id}
    </select>

    <update id="update">

    </update>
</mapper>