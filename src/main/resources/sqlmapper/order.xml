<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.OrderMapper">
    <resultMap id="result" type="OrderDTO">
        <result property="id" column="id"/>
        <result property="regdate" column="regdate"/>
        <result property="option" column="option"/>
        <result property="price" column="price"/>
        <result property="comment" column="comment"/>
        <result property="status" column="status"/>
        <result property="menu_id" column="menu_id"/>
        <result property="total_order_id" column="total_order_id"/>
        <result property="store_id" column="store_id"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO order (regdate, option, price, comment, status, menu_id, total_order_id, store_id)
        VALUES (#{regdate}, #{option}, #{price}), #{comment}, #{status}), #{menu_id}, #{total_order_id}, #{store_id})
    </insert>

    <select id="selectAllWithStore_id">
        SELECT *
        FROM order
        WHERE store_id=#{store_id}
    </select>

    <select id="selectAllWithTotal_Order_id">
        SELECT *
        FROM order
        WHERE total_order_id=#{total_order_id}
    </select>

    <update id="updateStatus">
        UPDATE order
        SET status=#{status}
        WHERE store_id=#{store_id}
    </update>
</mapper>