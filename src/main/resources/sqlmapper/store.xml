<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.StoreMapper">
    <resultMap id="result" type="StoreDTO">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="tag" column="tag"/>
        <result property="carry_price" column="carry_price"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <result property="user_id" column="user_id"/>
        <result property="carry_sale" column="carry_sale"/>
    </resultMap>

    <insert id="insert">
        insert into order (id, name, tag, carry_price, phone, address, user_id, carry_sale)
        values (#{id}, #{name}, #{tag}, #{carry_price}), #{phone}, #{address), #{user_id}, #{carry_sale})
    </insert>

    <select id="selectAll">
        select * from store
    </select>

    <select id="selectAllForUser">
        select * from store where user_id = #{user_id}
    </select>
</mapper>