<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.StoreRegistMapper">
    <resultMap id="result" type="StoreRegistDTO">
        <result property="id" column="id"/> <!--PK, 자동 생성-->
        <result property="name" column="name"/>
        <result property="comment" column="comment"/>
        <result property="address" column="address"/>
        <result property="phone" column="phone"/>
        <result property="status" column="status"/>
        <result property="user_pk" column="user_pk"/> <!--FK-->
    </resultMap>

    <insert id="insertRegistration">
        INSERT INTO store_regist (name, comment, address, phone, status, user_pk)
        VALUES (#{name}, #{comment}, #{address}, #{phone}, #{status}, #{user_pk})
    </insert>

    <select id="selectAll" resultMap="result">
        SELECT *
        FROM store_regist
    </select>

    <select id="selectAllWithStatus" resultMap="result">
        SELECT *
        FROM store_regist
        WHERE status=#{status}
    </select>

    <update id="updateStatus">
        UPDATE store_regist
        SET status=#{status}
        WHERE id = #{id}
    </update>
</mapper>