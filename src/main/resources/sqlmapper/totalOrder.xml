<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.TotalOrderMapper">
    <resultMap id="result" type="TotalOrderDTO">
        <result property="id" column="id"/>
        <result property="regdate" column="regdate"/>
        <result property="address" column="address"/>
        <result property="total_price" column="total_price"/>
        <result property="user_id" column="user_id"/>
    </resultMap>

    <insert id="insert">
        insert into order (id, regdate, address, total_price, user_id)
        values (#{id}, #{regdate}, #{address}, #{total_price}), #{user_id})
    </insert>

    <select id="selectAllForUser">
        select * from totalOrder where user_id = #{user_id}
    </select>
</mapper>