<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.TotalOrderMapper">
    <resultMap id="result" type="TotalOrderDTO">
        <result property="id" column="id"/>
        <result property="regdate" column="regdate"/>
        <result property="address" column="address"/>
        <result property="total_price" column="total_price"/>
        <result property="user_pk" column="user_pk"/>
    </resultMap>

    <insert id="insertTotalOrder">
        INSERT INTO total_order (regdate, address, total_price, user_pk)
        VALUES (#{regdate}, #{address}, #{total_price}), #{user_pk})
    </insert>

    <select id="selectAllWithUser_pk">
        SELECT *
        FROM total_order
        WHERE user_pk=#{user_pk}
    </select>
</mapper>