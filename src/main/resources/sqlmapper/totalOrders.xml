<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.totalOrdersMapper">
    <resultMap id="result" type="OrdersDTO">
        <result property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="regdate" column="regdate"/>
        <result property="store_id" column="store_id"/>
        <result property="user_pk" column="user_pk"/>
    </resultMap>

    <insert id="insertTotalOrders" useGeneratedKeys = "true" keyProperty="id" keyColumn="id">
        INSERT INTO total_orders (status, regdate, store_id, user_pk)
        VALUES (#{status}, #{regdate}, #{store_id}, #{user_pk})
    </insert>

    <select id="selectAllWithStoreId">
        SELECT *
        FROM total_orders
        WHERE store_id=#{store_id}
    </select>

    <select id="selectAllWithUserPk" >
        SELECT *
        FROM total_orders
        WHERE user_pk=#{user_pk}
    </select>

    <update id="updateStatus">
        UPDATE total_orders
        SET status=#{status}
        WHERE total_orders=#{total_orders}
    </update>

    <select id="selectOneWithId" >
        SELECT *
        FROM total_orders
        WHERE id=#{id}
    </select>
</mapper>